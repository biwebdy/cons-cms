{
  "kind": "collectionType",
  "collectionName": "otps",
  "info": {
    "singularName": "otp",
    "pluralName": "otps",
    "displayName": "OTP"
  },
  "options": {
    "draftAndPublish": false
  },
  "attributes": {
    "code": {
      "type": "string",
      "required": true
    },
    "expiresAt": {
      "type": "datetime",
      "required": true
    },
    "isUsed": {
      "type": "boolean",
      "default": false
    },
    "user": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "plugin::users-permissions.user"
    }
  }
}